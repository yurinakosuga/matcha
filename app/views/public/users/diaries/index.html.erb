<div class="container mt-4">
  <h2 class="text-center"><%= @user.nickname %>さんの抹茶日記一覧</h2>

 <div class="mt-4 mb-4">
   <div class="row">
     <div class="col-md-7 mx-auto">
       
    
<% @diaries.each do |diary| %>
      
  <div class="card mx-auto mt-4 shadow-lg">
    <div class="card-body">
      <div class="row">
      　
      　<div class="col-4 mt-4">
      　   <%= link_to diary_path(diary.id) do  %>　　 
            <%= image_tag diary.get_image, size: "5×5" %> 
          <% end %>
        </div>
        <div class="col-6 mt-5">
          <%= diary.shop.name %><br>
          <%= diary.genre.name %><br>
          抹茶の濃さ
          <% diary.darkness.times do %>
            <span>★</span>
          <% end %><br>
          総合評価
          <% diary.comprehensive_evaluation.times do %>
            <span>★</span>
          <% end %>
        </div>
        
    　</div>
  　</div>
　</div>
　
<% end %>

 <div class="d-flex justify-content-center my-4">
  <%= paginate @diaries %>
 </div>

 　　　</div>
    </div>
  </div>
</div> 
