<div class="container mt-4">
  <h2 class="">店名検索</h2>
  <div class="row" style="margin-top:4%">
  </div>
  <div class="row">
    <div class="col-12">
      <%= search_form_for @q, url:  search_shop_names_search_path do |f| %>
        
        <%= f.search_field :name_cont %>
      
        <%= f.submit "検索する", class:"btn btn-outline-success" %>
        <%= link_to "クリア", search_shop_names_search_path, class:"btn btn-outline-success" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
    <% if params[:q] %>
      <p>検索結果</p>
      <% if @shops == [] %>
    　　検索結果はありません
      <% else %>
        <% @shops.each do |shop| %>
           <%= shop.name %>
           <%= link_to "日記一覧", diaries_path(shop_id: shop) %>
        <% end %>
      <% end %>
    <% end %>
    </div>
  </div>
</div>
