<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    フリガナ
    <%= f.label :"(セイ)" %>
    <%= f.text_field :last_name_kana %>
    <%= f.label :"(メイ)" %>
    <%= f.text_field :first_name_kana %>
  </div>
  
  
  <div class="field">
    <%= f.label :"ニックネーム" %>
    <%= f.text_field :nickname %>
  </div>
  
  <div class="field">
    <%= f.label :"性別" %>
    <%= f.radio_button :gender, User.genders.key(0) %>
    <%= f.label :gender, User.genders_i18n[:male] %>
    <%= f.radio_button :gender, User.genders.key(1) %>
    <%= f.label :gender, User.genders_i18n[:female]%>
  </div>
  
  <div class="field">
    <%= f.label :"年齢" %>
    <%= f.select :age, User.ages.keys.map{ |k| [t("enums.user.age.#{k}"), k] } %>
  </div>
  
  <div class="field">
    <%= f.label :"お住まいの都道府県" %>
    <%= f.collection_select :address, JpPrefecture::Prefecture.all, :code, :name %>
    
  </div>
  
  <div class="field">
    <%= f.label :"メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  
  <div class="field">
    <%= f.label :"パスワード(６文字以上)" %>
    <% if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード(確認用)" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class:"btn btn-success" %>
  </div>
  
<% end %>

<h4>既に登録済みの方</h4>
<%= link_to "こちら", new_session_path(resource_name) %>からログインしてください。


