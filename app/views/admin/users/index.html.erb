
  <div class="container mt-5">
  <div class="row">
    <h5>会員一覧</h5>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
     
          <tr>
            <td><%= user.id %></td>
            <td>
              <%= link_to user.last_name_kana + user.first_name_kana, admin_user_path(user.id) %>
              
            </td>
            <td><%= user.email %></td>
            <% if user.is_deleted %>
              <td>退会</td>
          　<% else %>
              <td>有効</td>
            <% end %> 
                 
            
          </tr>
        <% end %>
          
      </tbody>
    </table>
  </div>
</div>