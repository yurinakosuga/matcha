<!DOCTYPE html>
<html>
  <head>
    <title>Pf</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
       <div class="container">
         
         
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            
            <% if admin_signed_in? %>
              <li>
                <%= link_to  root_path, class: "nav-link text-light" do %>
                  
                  <span>会員一覧</span>
                <% end %>
              </li>
              <li>
                <%= link_to   admin_shops_path, class: "nav-link text-light" do %>
                  
                  <span>ショップ一覧</span>
                <% end %>
              </li>
              <li>
                <%= link_to  admin_genres_path, class: "nav-link text-light" do %>
                  
                  <span>ジャンル一覧</span>
                <% end %>
              </li>
              <li>
                <%= link_to  root_path, class: "nav-link text-light" do %>
                  
                  <span>抹茶日記投稿一覧</span>
                <% end %>
              </li>
              <li>
                <%= link_to  destroy_admin_session_path, method: :delete, class: "nav-link text-light" do %>
                  
                  <span>ログアウト</span>
                <% end %>
              </li>
            
            
           
            
            
            <% elsif user_signed_in? %>
            
              <li>
                <%= link_to  user_path(current_user.id), class: "nav-link text-light" do %>
                  
                  <span>マイページ</span>
                <% end %>
              </li>
              
              <li>
                <%= link_to  searchs_path, class: "nav-link text-light" do %>
                  
                  <span>検索する</span>
                <% end %>
              </li>
              
              
              <li>
                <%= link_to  destroy_user_session_path, method: :delete, class: "nav-link text-light" do %>
                  
                  <span>ログアウト</span>
                <% end %>
              </li>
              
              
              
            <% else %>
            
              <li>
                <%= link_to  root_path, class: "nav-link text-light" do %>
                  
                  <span>ゲストログイン</span>
                <% end %>
              </li>
              <li>
                <%= link_to  new_user_registration_path, class: "nav-link text-light" do %>
                  
                  <span>新規登録</span>
                <% end %>
              </li>
              <li>
                <%= link_to   new_user_session_path, class: "nav-link text-light" do %>
                  
                  <span>ログイン</span>
                <% end %>
              </li>
              
            <% end %>
          </ul>
         </div>
       </div>
      </nav>
    </header>
    <%= flash[:notice] %>
    <%= yield %>
    <footer>
      <div class="container mt-5">
      	<div class="row">
        	<div class="mx-auto">
        		<p>CopyRight Infratop.inc</p>
        	</div>
        </div>
      </div>
    </footer>
  </body>
</html>

